//
// nested paths of dot-symbols work
//
(def s (snoopy asst: (hornet sidekick: (hellcat fname:"henry" lname:"johnson"))))

// get
(assert (== (.s.asst.sidekick.fname) "henry"))

// assign
{s.asst.sidekick.lname = "smith"}
(assert (== (.s.asst.sidekick.lname) "smith"))

// without leading .
(def h (hash a:10))
(assert (== (h.a) 10))
